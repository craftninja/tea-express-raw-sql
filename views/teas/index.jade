extends ../layout

block content

  div(class="page-header")
    a(href="teas/new" class="btn btn-success pull-right") Add teas
    h1 Check out all my awesome teas!

  table(class="table")
    thead
      th Name
      th Country
      th Price
      th Reorderable?
    tbody
      each tea in teas
        tr
          td= tea.name
          td #{tea.country}
          td= tea.price
          td= tea.reorderable ? "Yes!" : "No :("
